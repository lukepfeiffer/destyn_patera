#recent_work
  %h1 Our Recent Work
  .video-container
    .desktop
      .video-click#row
        - if homepage_thumbnails.present?
          - homepage_thumbnails.each do |video|
            .thumb-nail{data: {video_url: video_modal_path(url: video.video_url)}}
              = link_to edit_homepage_thumbnail_path(video.id) do
                - if current_user.present?
                  %p.edit-video Edit
              = link_to homepage_thumbnail_path(video.id), method: :delete do
                - if current_user.present?
                  %p.delete-video Delete
              = image_tag video.image_url
              %i.fa.fa-play
              %p.text= video.caption
    .mobile
      .video-click#row
        - if homepage_thumbnails.present?
          - homepage_thumbnails.first(6).each do |video|
            .thumb-nail{data: {video_url: video_modal_path(url: video.video_url)}}
              = link_to edit_homepage_thumbnail_path(video.id) do
                - if current_user.present?
                  %p.edit-video Edit
              = link_to homepage_thumbnail_path(video.id), method: :delete do
                - if current_user.present?
                  %p.delete-video Delete
              = image_tag video.image_url
              %i.fa.fa-play
              %p.text= video.caption
  = link_to new_homepage_thumbnail_path do
    - if current_user.present?
      %p.add-video Add Video
